{
  "name": "mcp-debugger",
  "displayName": "MCP Debugger",
  "description": "A VSCode extension for debugging MCP (Model Context Protocol) servers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-debugger.openInspector",
        "title": "Open MCP Inspector",
        "category": "MCP Debugger"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mcp-debugger.openInspector",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "MCP Debugger",
      "properties": {
        "mcpDebugger.inspectorUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL where the MCP Inspector is running",
          "pattern": "^https?://.+",
          "patternErrorMessage": "Must be a valid HTTP or HTTPS URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
