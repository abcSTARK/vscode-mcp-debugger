{
  "name": "mcp-debugger",
  "displayName": "MCP Vibe Inspector",
  "description": "Debug and inspect Model Context Protocol (MCP) servers right inside VS Code.",
  "version": "1.0.1",
  "publisher": "abcSTARK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abcSTARK/vscode-mcp-debugger"
  },
  "bugs": {
    "url": "https://github.com/abcSTARK/vscode-mcp-debugger/issues"
  },
  "homepage": "https://github.com/abcSTARK/vscode-mcp-debugger#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "keywords": [
    "mcp",
    "model context protocol",
    "inspector",
    "debugger",
    "ai",
    "llm",
    "tools"
  ],
  "galleryBanner": {
    "color": "#1f2228",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:mcp-debugger.openInspector",
    "onCommand:mcp-debugger.openInspectorInView",
    "onView:mcpInspectorSidebarView"
  ],
  "files": [
    "out/**",
    "media/**",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  
  "contributes": {
    "commands": [
      {
        "command": "mcp-debugger.openInspector",
        "title": "Open MCP Vibe Inspector",
        "category": "MCP Vibe Inspector"
      }
      ,
      {
        "command": "mcp-debugger.openInspectorInView",
        "title": "Open MCP Vibe Inspector (Activity View)",
        "category": "MCP Vibe Inspector"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mcp-debugger.openInspector",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpDebugger",
          "title": "MCP Vibe Inspector",
          "icon": "media/mcp.svg"
        }
      ]
    },
    "views": {
      "mcpDebugger": [
        {
          "id": "mcpInspectorSidebarView",
          "name": "MCP Vibe Inspector Sidebar",
          "type": "webview",
          "icon": "$(debug-alt)",
          "when": "true"
        }
      ]
    },
    "configuration": {
  "title": "MCP Vibe Inspector",
      "properties": {
        "mcpDebugger.inspectorUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL where the MCP Vibe Inspector is running",
          "pattern": "^https?://.+",
          "patternErrorMessage": "Must be a valid HTTP or HTTPS URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
